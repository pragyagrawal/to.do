<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/widgetTodoItem"
    android:padding="@dimen/margin_top_small">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWidgetItemTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_view_margin_bottom"
            android:textSize="@dimen/todo_item_text_size"
            tools:text="task" />

        <TextView
            android:id="@+id/tvWidgetItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_view_margin_bottom"
            android:textSize="@dimen/list_item_title_text_size"
            tools:text="description" />

        <TextView
            android:id="@+id/tvWidgetItemLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_view_margin_bottom"
            android:drawableLeft="@drawable/label_small_white"
            android:drawablePadding="@dimen/margin_top_small"
            android:textSize="@dimen/list_item_label_size"
            tools:text="label" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvWidgetSetItemDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin"
        android:gravity="end"
        tools:text="duedate" />
</LinearLayout>