<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.binarybricks.mytodolist.ToDoListActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emptyListMessage"
        android:layout_centerInParent="true"
        android:text="@string/empty_message_text"
        android:textSize="@dimen/empty_message_text_size"/>

    <EditText
        android:id="@+id/etAddTodoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:editable="false"
        android:hint="@string/take_a_note_hint" />

    <GridView
        android:id="@+id/gvTodoList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/etAddTodoText"
        android:layout_marginBottom="@dimen/grid_view_margin_bottom"
        android:horizontalSpacing="@dimen/grid_view_horizontal_spacing"
        android:numColumns="auto_fit"
        android:verticalSpacing="@dimen/grid_view_vertical_spacing"></GridView>

</RelativeLayout>
